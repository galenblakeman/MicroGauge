<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>netstandard2.0</TargetFramework>
	  <PackageId>MicroGauge</PackageId>
	  <Version>1.0.0.1</Version>
	  <Authors>Galen Blakeman</Authors>
	  <Company></Company>
	  <PackageDescription>MicroGauge is a basic radial and linear gauge library</PackageDescription>
	  <RepositoryUrl>https://github.com/galenblakeman/MicroGauge</RepositoryUrl>
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageTags>skia;skiasharp;c-sharp;dotnet;gauge</PackageTags>
	  <Copyright>Galen Blakeman</Copyright>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="SkiaSharp" Version="2.88.8" />
  </ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>

</Project>
