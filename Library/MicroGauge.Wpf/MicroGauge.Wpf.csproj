<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<UseWPF>true</UseWPF>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PackageId>MicroGauge.Wpf</PackageId>
		<Version>1.0.1.1</Version>
		<Authors>Galen Blakeman</Authors>
		<Company></Company>
		<PackageDescription>MicroGauge.Wpf is a MicroGauge view library with XAML tags and bindings for customization</PackageDescription>
		<PackageProjectUrl>https://github.com/galenblakeman/MicroGauge</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>skia;skiasharp;c-sharp;dotnet;gauge;wpf-controls</PackageTags>
		<Copyright>Galen Blakeman</Copyright>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="SkiaSharp.Views.WPF" Version="2.88.8" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\MicroGauge\MicroGauge.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>

</Project>